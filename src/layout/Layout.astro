---
import Header from "@/components/Header.astro";
import Seo, { type Preload } from "@/components/Seo.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description: string;
  preload?: Array<Preload>;
  canonical?: string;
  image?: string;
}

const { title, description, preload, canonical, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <Seo
      canonical={canonical}
      description={description}
      image={image}
      preload={preload}
      title={title}
    />

    <ViewTransitions />
  </head>
  <body>
    <main class="bg-[#102742]">
      <Header />
      <slot />
    </main>
  </body>
</html>
