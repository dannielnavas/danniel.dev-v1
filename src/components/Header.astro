---
import Icon from "./icons/Icon.astro";
import Logo from "./Logo.astro";

interface Menu {
  name: string;
  url: string;
}

const menu: Menu[] = [
  {
    name: "Inicio",
    url: "/",
  },
  {
    name: "Post",
    url: "/blog",
  },
  {
    name: "Proyectos",
    url: "/projects",
  },
];
---

<nav
  class="flex justify-between items-center bg-[#102742] text-white p-1 container mx-auto my-auto"
>
  <a href="/" rel="noopener noreferrer" class="flex items-center">
    <Logo class="w-14" />
    <h1 class="ml-1 text-3xl">Danniel Dev</h1>
  </a>

  <label for="menu-toggle" class="cursor-pointer sm:hidden p-2">
    <Icon name="ph:hamburger" id="menuIcon" />
  </label>

  <menu
    id="menuSelector"
    class="hidden absolute top-16 right-3 bg-[#102742] p-4 flex-col border-cyan-400 border-2 rounded-lg"
  >
    {
      menu.map(({ name, url }) => (
        <li class="list-none mr-1 ml-1">
          <a
            href={url}
            class="no-underline text-white"
            rel="noopener noreferrer"
            aria-label={name}
          >
            {name}
          </a>
        </li>
      ))
    }
  </menu>

  <menu class="flex justify-between items-center gap-5 max-sm:hidden">
    {
      menu.map(({ name, url }) => (
        <li class="list-none mr-1 ml-1">
          <a
            href={url}
            class="no-underline text-white"
            rel="noopener noreferrer"
            aria-label={name}
            id="link"
          >
            {name}
          </a>
        </li>
      ))
    }
  </menu>
</nav>
<script>
  const menuIcon = document.getElementById("menuIcon");
  const menu = document.getElementById("menuSelector");

  menuIcon?.addEventListener("click", () => {
    if (menu?.classList.contains("hidden")) {
      menu.classList.remove("hidden");
    } else {
      menu?.classList.add("hidden");
    }
  });
</script>
