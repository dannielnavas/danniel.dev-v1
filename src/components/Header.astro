---
import Logo from "./Logo.astro";

interface Menu {
  name: string;
  url: string;
}

const menu: Menu[] = [
  {
    name: "Inicio",
    url: "/",
  },
  {
    name: "Post",
    url: "/blog",
  },
  {
    name: "Proyectos",
    url: "/projects",
  },
];
---

<nav
  class="flex justify-between items-center bg-[#102742] text-white p-1 container mx-auto my-auto"
>
  <a href="/" target="_blank" rel="noopener noreferrer" class="flex items-center">
    <Logo class="w-14" />
    <h1 class="ml-1 text-3xl">Danniel Dev</h1>
  </a>

  <menu class="flex justify-between items-center gap-5 max-sm:hidden">
    {
      menu.map(({ name, url }) => (
        <li class="list-none mr-1 ml-1">
          <a
            href={url}
            class="no-underline text-white"
            rel="noopener noreferrer"
            aria-label={name}
          >
            {name}
          </a>
        </li>
      ))
    }
  </menu>
</nav>
