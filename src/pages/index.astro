---
import Footer from "@/components/Footer.astro";
import Hero from "@/components/Hero.astro";
import ListNumbers from "@/components/list/ListNumbers.astro";
import ListProjects from "@/components/list/ListProjects.astro";
import ListsAticles from "@/components/list/ListsArticles.astro";
import ListVideo from "@/components/list/ListVideo.astro";
import Layout from "@/layout/Layout.astro";
---

<Layout
  description="Explora el conocimiento y los proyectos desarrollados por Daniel Navas, también conocido como Danniel DEV, en el mundo del desarrollo de software. Únete a nuestra comunidad tecnológica y descubre cómo llevamos la innovación a la práctica."
  title="Danniel DEV | Daniel Navas: Artículos y Proyectos en Desarrollo de Software"
  canonical="https://danniel.dev"
>
  <main class="bg-[#102742] max-sm:px-4">
    <Hero />
    <ListsAticles numberItems="3" />
    <ListProjects limit="3" />
    <ListVideo />
    <ListNumbers />
  </main>
  <Footer />
</Layout>
